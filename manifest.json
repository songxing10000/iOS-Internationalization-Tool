{
  "manifest_version": 2,
  "name": "译++",
  "version": "1.0",
  "description": "翻译转代码助手",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_title": "译++",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://fanyi.baidu.com/*",
        "https://fanyi.youdao.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}